<resources>



    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlNormal">@color/textHint</item>
        <item name="colorButtonNormal">@color/textHint</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="AppTheme">

    </style>

    <style name="Progress" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#F5A623</item>
    </style>

    <style name="Progress.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="android:windowDisablePreview">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextAppearance.Light" parent="android:TextAppearance">
        <item name="fontPath">Lato-Light.ttf</item>
    </style>

    <style name="TextAppearance.Reg" parent="android:TextAppearance">
        <item name="fontPath">Lato-Regular.ttf</item>
    </style>

    <style name="TextAppearance.RegTab" parent="android:TextAppearance">
        <item name="fontPath">Lato-Regular.ttf</item>
        <item name="android:textSize">@dimen/h5</item>
    </style>



</resources>
